
{# ========== Formulaire principal, utiliser pour la création et modification des demandes ============ #}

<div class="bg-slate-800 p-7 mx-auto my-6 rounded-xl w-4/5 shadow-xl">
    {{ form_errors(form) }}

    {{ form_start(form) }}
        <div class="w-11/12 mx-auto flex flex-col">

            <div class="mb-8 flex flex-col">
                {{ form_label(form.label, 'Catégorie', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                {{ form_widget(form.label, {'attr': {'class': 'p-2 rounded-lg'}}) }}
            </div>

            <button class="btn bg-green-500 rounded-2xl text-center hover:brightness-125 shadow-lg font-bold px-7 py-3 self-end w-1/3 text-lg">{{ button_label|default('Créer la catégorie') }}</button>
        </div>
    {{ form_end(form) }}
</div>